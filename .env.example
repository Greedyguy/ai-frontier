# Environment variables template
# Copy this file to .env and fill in your values

# OpenAI API Key (required for OpenAI services)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key (required for Claude services)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Hugging Face API Token (if using HF models)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Model settings
MODEL_NAME=gpt-3.5-turbo
DEVICE=auto

# Search settings
DEFAULT_KEYWORDS=multimodal,llm,transformer,attention,neural network
DEFAULT_CATEGORIES=cs.AI,cs.LG,cs.CL,cs.CV

# Data paths
DATA_DIR=./data
MODELS_DIR=./models

# Logging
LOG_LEVEL=INFO

# Email settings (for mailing list notifications)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM_NAME=AI Frontier Reports
EMAIL_USE_TLS=true

# Slack webhook settings (for n8n integration)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
# SLACK_CHANNEL=#ai-frontier
# SLACK_BOT_NAME=AI Frontier Bot

# Notification settings
# NOTIFICATION_WEBHOOKS=https://your-n8n-webhook.com/digest,https://another-webhook.com/notify
# AUTO_SEND_EMAIL=false
# AUTO_SEND_SLACK=false