# Environment variables template
# Copy this file to .env and fill in your values

# OpenAI API Key (required for OpenAI services)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic API Key (required for Claude services)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Hugging Face API Token (if using HF models)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Model settings
MODEL_NAME=gpt-3.5-turbo
DEVICE=auto

# Search settings
DEFAULT_KEYWORDS=multimodal,llm,transformer,attention,neural network
DEFAULT_CATEGORIES=cs.AI,cs.LG,cs.CL,cs.CV

# Data paths
DATA_DIR=./data
MODELS_DIR=./models

# Logging
LOG_LEVEL=INFO